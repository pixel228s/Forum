@model Forum.Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@(!string.IsNullOrEmpty(Model.UserResponse.picUrl)
                                ? $"/S3/GetImage?key={Model.UserResponse.picUrl}"
                                : "https://www.pngitem.com/pimgs/m/146-1468479_my-profile-icon-blank-profile-picture-circle-hd.png")"
                         class="rounded-circle mb-3"
                         style="width: 100px; height: 100px;"
                         alt="Profile picture" />

                    <h4>@Model.UserResponse.UserName</h4>
                    <p>@Model.UserResponse.FirstName @Model.UserResponse.LastName</p>
                    <hr />

                    <form asp-controller="Profile" asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data" id="uploadForm">
                        <div class="mb-2">
                            <input type="file" name="ProfileImage" class="form-control" id="ProfileImageInput" />
                            <span id="fileError" class="text-danger" style="display:none;">Please select a file.</span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Upload Picture</button>

                    </form>

                    @if (!string.IsNullOrEmpty(Model.UserResponse.picUrl))
                    {
                        <form asp-controller="Profile" asp-action="DeleteProfilePicture" method="post" class="mt-2">
                            <button type="submit" class="btn btn-danger w-100">Delete Picture</button>
                        </form>
                    }

                    <a class="btn btn-warning w-100 mt-2" asp-controller="Profile" asp-action="ChangePassword">
                        Change Password
                    </a>

                </div>
            </div>
        </div>

<div class="col-md-8">
    <h3>User Posts</h3>

    @if (Model.UserPosts != null && Model.UserPosts.Any())
    {
        @foreach (var post in Model.UserPosts)
        {
            <div class="card mb-3" id="post-@post.Id">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text" id="postContent-@post.Id">@post.Content</p>

                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@($"/S3/GetImage?key={post.ImageUrl}")"
                             class="img-fluid rounded mb-2"
                             alt="Post image" />
                    }

                    <p class="text-muted mb-2">
                        Created: @post.CreationDate.ToString("g")
                    </p>

                    <div class="mb-2">
                        <a class="btn btn-outline-secondary"
                           asp-controller="Post"
                           asp-action="Comments"
                           asp-route-postId="@post.Id">
                            Comments
                        </a>

                        <button class="btn btn-outline-primary edit-post-btn"
                                data-post-id="@post.Id"
                                data-post-title="@Html.Raw(Html.Encode(post.Title))"
                                data-post-content="@Html.Raw(Html.Encode(post.Content))">
                            Edit
                        </button>
                         <form asp-controller="Post" asp-action="DeletePost"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <input type="hidden" name="PostId" value="@post.Id" />
                            <button type="submit" class="btn btn-outline-danger">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>This user has not made any posts yet.</p>
    }
</div>

<div id="editPostModal" class="modal" style="display:none; position: fixed; z-index:1050; left:0; top:0; width:100%; height:100%; background: rgba(0,0,0,0.5);">
    <div style="position:relative; margin:10% auto; padding:20px; background:white; width:90%; max-width:500px; border-radius:8px;">
        <h5>Edit Post</h5>
        <form id="editPostForm" method="post" asp-controller="Post" asp-action="UpdatePost">
            <div class="mb-3">
                <label for="editPostTitle">Title</label>
                <input type="text" id="editPostTitle" name="Title" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="editPostContent">Content</label>
                <textarea id="editPostContent" name="Content" class="form-control" rows="4" required></textarea>
            </div>
            <input type="hidden" id="editPostId" name="PostId" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" onclick="closeEditPostModal()">Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.edit-post-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const postId = this.dataset.postId;
                const title = this.dataset.postTitle;
                const content = this.dataset.postContent;

                document.getElementById('editPostId').value = postId;
                document.getElementById('editPostTitle').value = title;
                document.getElementById('editPostContent').value = content;

                document.getElementById('editPostModal').style.display = 'block';
            });
        });

        function closeEditPostModal() {
            document.getElementById('editPostModal').style.display = 'none';
        }

        document.getElementById('editPostModal').onclick = function (e) {
            if (e.target === this) closeEditPostModal();
        }

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && document.getElementById('editPostModal').style.display === 'block') {
                closeEditPostModal();
            }
        });
    </script>
}

